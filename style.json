    {
      "id": "water-river-lake-ja",
      "type": "fill",
      "source": "geolonia",
      "source-layer": "water",
      "filter": [
        "all",
        [
          "==",
          [
            "get",
            "class"
          ],
          "lake"
        ]
      ],
      "layout": {
        "visibility": "visible"
      },
      "paint": {
        "fill-color": "#ffffff"
      }
    },
    {
      "id": "highway-secondary-tertiary",
      "type": "line",
